<% if flash[:error] %>
  <div class="alert alert-error">
    <%= flash[:error] %>
  </div>
<% end %>

<%= form_tag('/login') do %>
  <div class="control-group">
    <%= label_tag :email, 'Email', class: 'control-label' %>
    <div class="controls">
      <%= text_field_tag :email, nil, placeholder: 'Your email' %> 
    </div>
  </div>
  <div class="control-group">
    <%= label_tag :password, 'Password', class: 'control-label' %>
    <div class="controls">
      <%= password_field_tag :password, nil, placeholder: 'Your password' %> 
    </div>
  </div>
  <div class="form-actions">
    <%= submit_tag 'Login', class: 'btn btn-success btn-large', disable_with: 'Logging in...' %>  
  </div>
<% end %>