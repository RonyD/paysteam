<h1>Sign Up</h1>

<hr />

<%= form_tag('/sign_up') do %>
  <% if @company.errors.any? %>
    <div class="alert alert-error">
      <ul>
      <% @company.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="control-group">
    <%= label_tag :company_name, 'Company Name', class: 'control-label' %>
    <div class="controls">
      <%= text_field_tag :company_name %>
    </div>
  </div>
  <div class="control-group">
    <%= label_tag :first_name, 'First Name', class: 'control-label' %>
    <div class="controls">
      <%= text_field_tag :first_name %>
    </div>
  </div>
  <div class="control-group">
    <%= label_tag :last_name, 'Last Name', class: 'control-label' %>
    <div class="controls">
      <%= text_field_tag :last_name %>
    </div>
  </div>
  <div class="control-group">
    <%= label_tag :email, 'Email', class: 'control-label' %>
    <div class="controls">
      <%= email_field_tag :email %>
    </div>
  </div>
  <div class="control-group">
    <%= label_tag :password, 'Password', class: 'control-label' %>
    <div class="controls">
      <%= password_field_tag :password %>
    </div>
  </div>
  <div class="form-actions">
    <%= submit_tag 'Sign Up', class: "btn btn-success btn-large" %>
  </div>
<% end %>
