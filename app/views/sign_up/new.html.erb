<h1>Sign Up</h1>

<hr />

<%= form_for(@company, url: 'sign_up') do |f| %>
  <% if @company.errors.any? %>
    <div class="alert alert-error">
      <ul>
      <% @company.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="control-group">
    <%= f.label :name, 'Company Name', class: 'control-label' %>
    <div class="controls">
      <%= f.text_field :name %>
    </div>
  </div>

  <%= f.fields_for :users do |builder| %>
    <div class="control-group">
      <%= builder.label :first_name, 'First Name', class: 'control-label' %>
      <div class="controls">
        <%= builder.text_field :first_name %>
      </div>
    </div>
    <div class="control-group">
      <%= builder.label :last_name, 'Last Name', class: 'control-label' %>
      <div class="controls">
        <%= builder.text_field :last_name %>
      </div>
    </div>
    <div class="control-group">
      <%= builder.label :email, 'Email', class: 'control-label' %>
      <div class="controls">
        <%= builder.email_field :email %>
      </div>
    </div>
    <div class="control-group">
      <%= builder.label :password, 'Password', class: 'control-label' %>
      <div class="controls">
        <%= builder.password_field :password %>
      </div>
    </div>
  <% end %>

  <div class="form-actions">
    <%= f.submit 'Sign Up', class: "btn btn-success btn-large" %>
  </div>
<% end %>
